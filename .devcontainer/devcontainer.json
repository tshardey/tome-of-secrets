{
	"name": "Tome of Secrets (Jekyll)",
	// Use the official Microsoft-maintained image for Jekyll development.
	"image": "mcr.microsoft.com/devcontainers/jekyll",

	// Forward the Jekyll server port so you can access it from your local browser.
	"forwardPorts": [4000],

	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},

	// Mount your personal git config and SSH keys into the container.
	"mounts": [
		// Mount your .gitconfig file
		"source=C:/Users/anthu/.gitconfig-tshardey,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
		// Mount your SSH keys
		"source=C:/Users/anthu/.ssh-tshardey,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],


	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bundle install && node scripts/generate-data.js",

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"google.geminicodeassist"
			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}